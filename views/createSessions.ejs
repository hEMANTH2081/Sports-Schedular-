<div id="sessionFormContainer" style="background: white; display: none; border-radius: 12px; margin: 20px 0; box-shadow: 3px 5px 15px rgba(0, 0, 0, 0.2); width: 100%; padding: 20px;">
    <div style="display: flex; flex-direction: column; align-items: center; justify-content: center; border-radius: 12px; padding: 20px 10px; max-width: 800px; margin: auto;">
        <form action="/create-session" method="post" id="sessionForm" onsubmit="submitSessionForm(event)" style="background: #f0f4f8; padding: 20px 25px; border-radius: 10px; box-shadow: 2px 4px 10px rgba(0, 0, 0, 0.1); width: 100%;">
            <h2 style="font-size: 22px; font-weight: bold; margin-bottom: 20px; text-align: center; color: #333;">Create a New Session</h2>

            <!-- Select Sport -->
            <div style="margin-bottom: 15px;">
                <label for="sport" style="display: block; font-size: 14px; font-weight: 600; color: #555;">Select Sport</label>
                <select id="sport" name="sport" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 6px; background: white; cursor: pointer;" required>
                    <% sports.forEach(sport => { %>
                        <option value="<%= sport %>"><%= sport %></option>
                    <% }) %>
                </select>
            </div>

            <!-- Team A & B Inputs -->
            <div style="display: flex; flex-wrap: wrap; gap: 15px;">
                <div style="flex: 1; min-width: 280px;">
                    <label for="teamA" style="font-size: 14px; font-weight: 600; color: #555;">Team A Lead</label>
                    <input type="text" id="teamA" name="teamA" placeholder="Enter team lead name" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 6px;" required>

                    <label for="teamASize" style="font-size: 14px; font-weight: 600; color: #555; margin-top: 10px; display: block;">Team A Size</label>
                    <input type="number" id="teamASize" name="teamASize" placeholder="Enter team size" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 6px;" required>
                </div>

                <div style="flex: 1; min-width: 280px;">
                    <label for="teamB" style="font-size: 14px; font-weight: 600; color: #555;">Team B Lead</label>
                    <input type="text" id="teamB" name="teamB" placeholder="Enter team lead name" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 6px;" required>

                    <label for="teamBSize" style="font-size: 14px; font-weight: 600; color: #555; margin-top: 10px; display: block;">Team B Size</label>
                    <input type="number" id="teamBSize" name="teamBSize" placeholder="Enter team size" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 6px;" required>
                </div>
            </div>

            <!-- Actual Team Size -->
            <div style="margin-top: 15px;">
                <label for="actualTeamSize" style="font-size: 14px; font-weight: 600; color: #555;">Actual Team Size</label>
                <input type="number" id="actualTeamSize" name="actualTeamSize" placeholder="Enter actual team size" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 6px;" required>
            </div>

            <!-- Place Input -->
            <div style="margin-top: 15px;">
                <label for="place" style="font-size: 14px; font-weight: 600; color: #555;">Session Place</label>
                <input type="text" id="place" name="place" placeholder="Enter session place" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 6px;" required>
            </div>

            <!-- Date & Time Inputs -->
            <div style="display: flex; flex-wrap: wrap; gap: 15px; margin-top: 15px;">
                <div style="flex: 1; min-width: 280px;">
                    <label for="date" style="font-size: 14px; font-weight: 600; color: #555;">Date</label>
                    <input type="date" id="date" name="date" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 6px;" required>
                </div>
                <div style="flex: 1; min-width: 280px;">
                    <label for="time" style="font-size: 14px; font-weight: 600; color: #555;">Time</label>
                    <input type="time" id="time" name="time" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 6px;" required>
                </div>
            </div>

            <!-- Submit Button -->
            <button type="submit" style="margin-top: 20px; width: 100%; background: linear-gradient(90deg, #007bff, #0056b3); color: white; padding: 12px; border: none; border-radius: 6px; font-size: 16px; font-weight: bold; cursor: pointer; transition: 0.3s;">
                Create Session
            </button>
        </form>
    </div>
</div>
